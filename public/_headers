# Cloudflare Pages Headers for Michigan Spots
# https://michiganspots.com
# Last updated: 2025-11-07

# Global headers for all pages
/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(self), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

  # Content Security Policy (adjust as needed for your scripts/styles)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://static.cloudflareinsights.com https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://cloudflareinsights.com; frame-src 'self' https://challenges.cloudflare.com; frame-ancestors 'self'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

  # Performance & Caching
  Cache-Control: public, max-age=3600, s-maxage=7200, stale-while-revalidate=86400

  # CORS - Allow specific origins if needed
  Access-Control-Allow-Origin: https://michiganspots.com
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization

  # SEO & Link Headers
  Link: <https://michiganspots.com>; rel="canonical"
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin
  Link: <https://www.googletagmanager.com>; rel=dns-prefetch

  # Vary header for proper caching
  Vary: Accept-Encoding, User-Agent

