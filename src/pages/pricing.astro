              <h3 class="font-heading text-2xl font-bold text-ink-primary mb-2">
                {tier.name}
              </h3>
              <p class="text-sm text-ink-secondary mb-4">{tier.description}</p>

              <div class="mb-2">
                <span class="text-5xl font-bold text-ink-primary">${tier.price}</span>
                {tier.period && <span class="text-ink-secondary">/{tier.period}</span>}
              </div>
            </div>

            <ul class="space-y-3 mb-8">
              {tier.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm">
                  <Check size={18} class="text-forest-green flex-shrink-0 mt-0.5" />
                  <span class="text-ink-primary">{feature}</span>
                </li>
              ))}
              {tier.notIncluded && tier.notIncluded.map((feature) => (
                <li class="flex items-start gap-2 text-sm opacity-40">
                  <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
