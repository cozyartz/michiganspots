---
import Layout from '../layouts/Layout.astro';
import { Sparkles, Star, Zap, MapPin, TrendingUp, Building2 } from 'lucide-react';
import { PricingTierCard } from '../components/pricing/PricingTierCard';
import { PricingComparison } from '../components/pricing/PricingComparison';
import { PricingQuiz } from '../components/pricing/PricingQuiz';
---

<Layout
  title="Partnership Options - Michigan Spots"
  description="Find the perfect plan for your Michigan business. Start FREE with directory advertising or drive foot traffic with game partnerships."
  keywords="Michigan business advertising, local business marketing, game partnerships Michigan, business directory pricing"
>
  <!-- Hero Section with Quiz CTA -->
  <section class="py-20 px-4 bg-gradient-to-br from-lakes-blue via-copper-orange to-forest-green text-white">
    <div class="container mx-auto max-w-6xl text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full mb-6">
        <Sparkles className="text-gold" size={20} />
        <span class="font-semibold">Two Ways to Partner</span>
      </div>

      <h1 class="font-display text-5xl md:text-6xl font-bold mb-6">
        Find the Perfect Plan for Your Business
      </h1>

      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto opacity-95">
        Start FREE with directory advertising, or drive verified foot traffic with game partnerships
      </p>

      <button
        id="openQuiz"
        class="inline-flex items-center gap-3 px-8 py-4 bg-white text-ink-primary rounded-xl font-bold hover:shadow-2xl transition-all transform hover:scale-105"
      >
        <Sparkles size={24} className="text-copper-orange" />
        <span>Help Me Choose the Right Plan</span>
      </button>

      <p class="text-sm mt-4 opacity-80">
        Take our 30-second quiz to get personalized recommendations
      </p>
    </div>
  </section>

  <!-- Directory Advertising Section -->
  <section id="directory" class="py-20 px-4 bg-parchment-light scroll-mt-20">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-4">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-forest-green/10 rounded-full mb-4">
          <Star className="text-forest-green" size={20} />
          <span class="text-sm font-bold text-forest-green">START HERE - FREE FOREVER</span>
        </div>
      </div>

      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-3 mb-4">
          <TrendingUp className="text-copper-orange" size={40} />
          <h2 class="font-display text-4xl md:text-5xl font-bold text-ink-primary">
            Business Directory Advertising
          </h2>
        </div>
        <p class="text-xl text-ink-secondary max-w-3xl mx-auto">
          AI-powered search visibility • Always-on advertising • No game participation required
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <PricingTierCard
          name="FREE"
          price={0}
          period="forever"
          description="Perfect for getting started"
          features={[
            'Basic business listing',
            'Standard search visibility',
            'Contact information display',
            'Up to 3 photos',
            'Monthly analytics report',
            'Email support'
          ]}
          icon={Star}
          color="from-gray-500 to-gray-600"
          ctaText="Get Started FREE"
          ctaLink="/directory/claim"
          client:load
        />

        <PricingTierCard
          name="STARTER"
          price={49}
          period="month"
          description="AI-enhanced visibility"
          features={[
            'Everything in FREE',
            'AI-generated business description',
            'AI keyword optimization',
            'Up to 8 photos',
            '+30% search ranking boost',
            'Weekly analytics reports',
            'Competitor analysis',
            'Priority email support'
          ]}
          icon={Sparkles}
          color="from-blue-500 to-cyan-500"
          ctaText="Start Starter Plan"
          ctaLink="/directory/claim?tier=starter"
          client:load
        />

        <PricingTierCard
          name="GROWTH"
          price={99}
          period="month"
          description="Maximum local visibility"
          features={[
            'Everything in STARTER',
            'Featured badge in search',
            '+60% search ranking boost',
            'Up to 15 photos',
            'Top AI recommendations',
            'Weekly AI insights',
            'Real-time trend alerts',
            'Enhanced analytics',
            'Priority phone support'
          ]}
          icon={TrendingUp}
          color="from-purple-500 to-pink-500"
          popular={true}
          ctaText="Start Growth Plan"
          ctaLink="/directory/claim?tier=growth"
          client:load
        />

        <PricingTierCard
          name="PRO"
          price={199}
          period="month"
          description="Full AI intelligence suite"
          features={[
            'Everything in GROWTH',
            '+100% search ranking boost',
            'Up to 30 photos',
            'Daily AI intelligence',
            'API access',
            'White-label AI assistant',
            'Dedicated account manager',
            'Custom reporting',
            'Multi-location support'
          ]}
          icon={Zap}
          color="from-gold to-copper-orange"
          ctaText="Start Pro Plan"
          ctaLink="/directory/claim?tier=pro"
          client:load
        />
      </div>
    </div>
  </section>

  <!-- Game Partnerships Section -->
  <section id="game" class="py-20 px-4 bg-white scroll-mt-20">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-4">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-lakes-blue/10 rounded-full mb-4">
          <MapPin className="text-lakes-blue" size={20} />
          <span class="text-sm font-bold text-lakes-blue">DRIVE VERIFIED FOOT TRAFFIC</span>
        </div>
      </div>

      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-3 mb-4">
          <MapPin className="text-lakes-blue" size={40} />
          <h2 class="font-display text-4xl md:text-5xl font-bold text-ink-primary">
            Treasure Hunt Game Partnerships
          </h2>
        </div>
        <p class="text-xl text-ink-secondary max-w-3xl mx-auto">
          GPS-verified challenges that drive real foot traffic to your location
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <PricingTierCard
          name="SPOT PARTNER"
          price="$99"
          description="Great for small businesses"
          features={[
            '1 challenge per month',
            'Basic business profile on map',
            'Monthly analytics reports',
            'Player engagement metrics',
            'Social media mentions',
            'Email support'
          ]}
          icon={MapPin}
          color="from-lakes-blue to-cyan-600"
          popular={true}
          ctaText="Get Started"
          ctaLink="/business-intake?tier=spot"
          priceOptions={{
            monthly: 99,
            quarterly: 249,
            yearly: 899
          }}
          client:load
        />

        <PricingTierCard
          name="FEATURED PARTNER"
          price="$699/quarter"
          description="Popular choice for growth"
          features={[
            '2-3 challenges per month',
            'Enhanced profile with media',
            'Featured placement in game',
            'Weekly analytics reports',
            'Quarterly strategy calls',
            'Priority support',
            'Social media promotion'
          ]}
          icon={MapPin}
          color="from-purple-500 to-pink-500"
          ctaText="Get Started"
          ctaLink="/business-intake?tier=featured"
          priceOptions={{
            quarterly: 699,
            yearly: 2499
          }}
          client:load
        />

        <PricingTierCard
          name="PREMIUM SPONSOR"
          price="$1,499/quarter"
          description="Maximum game visibility"
          features={[
            'Unlimited challenges',
            'Premium branding in game',
            'Web/dev services included',
            'Dedicated account manager',
            'Custom challenge creation',
            'Advanced analytics',
            'Quarterly business reviews'
          ]}
          icon={MapPin}
          color="from-copper-orange to-gold"
          ctaText="Get Started"
          ctaLink="/business-intake?tier=premium"
          priceOptions={{
            quarterly: 1499,
            yearly: 4999
          }}
          client:load
        />

        <PricingTierCard
          name="TITLE SPONSOR"
          price="$3,999/quarter"
          description="Full platform co-branding"
          features={[
            'Everything in Premium',
            'Platform co-branding rights',
            'Exclusive category sponsorship',
            'Custom development projects',
            'White-glove service',
            'Quarterly executive briefings',
            'Multi-city campaigns',
            'Full marketing suite'
          ]}
          icon={Building2}
          color="from-gold to-amber-600"
          ctaText="Contact Us"
          ctaLink="/business-intake?tier=title"
          priceOptions={{
            quarterly: 3999,
            yearly: 13999
          }}
          client:load
        />
      </div>
    </div>
  </section>

  <!-- Chamber Partnerships Section -->
  <section id="chamber" class="py-16 px-4 bg-parchment-light scroll-mt-20">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-8">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-ink-primary mb-4">
          For Chambers of Commerce
        </h2>
        <p class="text-lg text-ink-secondary">
          Support up to 10 member businesses with coordinated challenges
        </p>
      </div>

      <div class="max-w-2xl mx-auto">
        <PricingTierCard
          name="CHAMBER PARTNERSHIP"
          price="$899/quarter"
          description="Empower your member businesses"
          features={[
            'Challenges for up to 10 members',
            'Chamber-branded challenge series',
            'Member directory integration',
            'Quarterly analytics & reports',
            'Event promotion support',
            'Co-marketing opportunities',
            'Dedicated chamber portal',
            'Priority support'
          ]}
          icon={Building2}
          color="from-forest-green to-lakes-blue"
          ctaText="Contact Us"
          ctaLink="/chamber-intake"
          priceOptions={{
            quarterly: 899,
            yearly: 2999
          }}
          client:load
        />
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <PricingComparison client:load />

  <!-- Quiz Modal -->
  <div id="quizModal" class="hidden">
    <PricingQuiz client:only="react" />
  </div>
</Layout>

<script>
  const openQuizBtn = document.getElementById('openQuiz');
  const quizModal = document.getElementById('quizModal');

  openQuizBtn?.addEventListener('click', () => {
    if (quizModal) {
      quizModal.classList.remove('hidden');
    }
  });

  // Close quiz modal when clicking overlay
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.closest('.fixed.inset-0') && !target.closest('.bg-parchment-light')) {
      quizModal?.classList.add('hidden');
    }
  });
</script>

<style>
  .parchment-card {
    background: linear-gradient(135deg, #F4EFE5 0%, #E8DCC8 100%);
    border: 2px solid #D4C4A8;
  }

  .scroll-mt-20 {
    scroll-margin-top: 5rem;
  }
</style>
