        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        {directoryPricing.map((tier) => (
          <div class={`relative parchment-card p-8 hover:shadow-2xl transition-all duration-300 ${tier.popular ? 'ring-4 ring-copper-orange transform scale-105' : ''}`}>
            {tier.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-6 py-2 bg-gradient-to-r from-copper-orange to-gold text-white rounded-full text-sm font-bold shadow-lg">
                MOST POPULAR
              </div>
            )}

            <div class="text-center mb-6">
              <div class={`w-16 h-16 bg-gradient-to-br ${tier.color} rounded-2xl mx-auto mb-4 flex items-center justify-center`}>
                {tier.name === 'FREE' && <Star className="text-white" size={32} />}
                {tier.name === 'STARTER' && <Sparkles className="text-white" size={32} />}
                {tier.name === 'GROWTH' && <TrendingUp className="text-white" size={32} />}
                {tier.name === 'PRO' && <Zap className="text-white" size={32} />}
