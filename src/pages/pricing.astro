<Layout
  title="Pricing - Michigan Spots"
  description="Choose your Michigan Spots plan. Directory advertising starts at FREE. Treasure hunt game partnerships start at $99/month."
  keywords="Michigan business advertising pricing, Michigan Spots pricing, business directory cost Michigan"
>
  <!-- Hero Section -->
  <section class="py-20 px-4 bg-gradient-to-br from-lakes-blue via-copper-orange to-forest-green text-white">
    <div class="container mx-auto max-w-6xl text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full mb-6">
        <Sparkles className="text-gold" size={20} />
        <span class="font-semibold">Two Ways to Grow Your Business</span>
      </div>

      <h1 class="font-display text-5xl md:text-6xl font-bold mb-6">
        Simple, Transparent Pricing
      </h1>

      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto opacity-95">
        Choose business directory advertising OR treasure hunt game partnershipsâ€”or both!
      </p>
    </div>
  </section>

  <!-- Category Selector -->
  <section class="py-12 px-4 bg-parchment-light border-b-2 border-parchment-mid sticky top-0 z-40">
    <div class="container mx-auto max-w-4xl">
      <div class="grid md:grid-cols-2 gap-4">
        <button
          id="showDirectory"
          class="category-tab active px-8 py-4 rounded-xl font-bold text-lg transition-all"
        >
          <div class="flex items-center justify-center gap-3">
            <TrendingUp size={24} />
            <div class="text-left">
              <div>Business Directory</div>
              <div class="text-sm font-normal opacity-75">Advertising & Visibility</div>
            </div>
          </div>
        </button>
        <button
          id="showSpots"
          class="category-tab px-8 py-4 rounded-xl font-bold text-lg transition-all"
        >
          <div class="flex items-center justify-center gap-3">
            <MapPin size={24} />
            <div class="text-left">
              <div>Spots Partnerships</div>
              <div class="text-sm font-normal opacity-75">Treasure Hunt Game</div>
            </div>
          </div>
        </button>
      </div>
    </div>
  </section>

  <!-- Directory Pricing Section -->
  <section id="directorySection" class="pricing-section py-20 px-4 bg-parchment-light">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-12">
