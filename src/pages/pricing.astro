// Game Partnership Tiers
const gameTiers = [
  {
    name: 'SPOT PARTNER',
    priceDisplay: '$99/mo',
    priceOptions: ['$99/month', '$249/quarter', '$899/year'],
    description: 'Great for small businesses',
    color: 'from-lakes-blue to-cyan-600',
    popular: true,
    ctaLink: '/business-intake?tier=spot',
    features: [
      '1 challenge per month',
      'Basic business profile on map',
      'Monthly analytics reports',
      'Player engagement metrics',
      'Social media mentions',
      'Email support',
    ],
  },
  {
    name: 'FEATURED PARTNER',
    priceDisplay: '$699/qtr',
    priceOptions: ['$699/quarter', '$2,499/year'],
    description: 'Popular choice for growth',
    color: 'from-purple-500 to-pink-500',
    popular: false,
    ctaLink: '/business-intake?tier=featured',
    features: [
      '2-3 challenges per month',
      'Enhanced profile with media',
      'Featured placement in game',
      'Weekly analytics reports',
      'Quarterly strategy calls',
      'Priority support',
      'Social media promotion',
    ],
  },
  {
    name: 'PREMIUM SPONSOR',
    priceDisplay: '$1,499/qtr',
    priceOptions: ['$1,499/quarter', '$4,999/year'],
    description: 'Maximum game visibility',
    color: 'from-copper-orange to-gold',
    popular: false,
    ctaLink: '/business-intake?tier=premium',
    features: [
      'Unlimited challenges',
      'Premium branding in game',
      'Web/dev services included',
      'Dedicated account manager',
      'Custom challenge creation',
      'Advanced analytics',
      'Quarterly business reviews',
    ],
  },
  {
    name: 'TITLE SPONSOR',
    priceDisplay: '$3,999/qtr',
    priceOptions: ['$3,999/quarter', '$12,999/year'],
    description: 'Full platform co-branding',
    color: 'from-gold to-amber-600',
    popular: false,
    ctaLink: '/business-intake?tier=title',
    features: [
      'Everything in Premium',
      'Platform co-branding rights',
      'Exclusive category sponsorship',
      'Custom development projects',
      'White-glove service',
      'Quarterly executive briefings',
      'Multi-city campaigns',
      'Full marketing suite',
    ],
  },
