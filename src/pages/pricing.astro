<script>
  const directoryBtn = document.getElementById('showDirectory');
  const spotsBtn = document.getElementById('showSpots');
  const directorySection = document.getElementById('directorySection');
  const spotsSection = document.getElementById('spotsSection');

  directoryBtn?.addEventListener('click', () => {
    directorySection?.classList.remove('hidden');
    spotsSection?.classList.add('hidden');
    directoryBtn.classList.add('active');
    spotsBtn?.classList.remove('active');
  });

  spotsBtn?.addEventListener('click', () => {
    spotsSection?.classList.remove('hidden');
    directorySection?.classList.add('hidden');
    spotsBtn.classList.add('active');
    directoryBtn?.classList.remove('active');
  });
</script>

