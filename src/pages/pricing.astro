const gamePricing = [
  {
    name: 'SPOT PARTNER',
    priceMonthly: 99,
    priceQuarterly: 249,
    priceYearly: 899,
    description: 'Great for small businesses',
    color: 'from-lakes-blue to-cyan-600',
