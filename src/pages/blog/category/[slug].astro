---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Layout from '../../../layouts/Layout.astro';
import { Card } from '../../../components/Card';
import { Calendar, User, ArrowRight } from 'lucide-react';

export const getStaticPaths = (async () => {
  const allPosts = await getCollection('blog', ({ data }) => {
    return data.status === 'published';
  });

  // Get unique categories
  const categories = [...new Set(allPosts.map(post => post.data.category))];

  return categories.map((category) => {
    const categorySlug = category.toLowerCase().replace(/\s+/g, '-');
    const filteredPosts = allPosts.filter(post => post.data.category === category);

    return {
      params: { slug: categorySlug },
      props: { category, posts: filteredPosts },
    };
  });
}) satisfies GetStaticPaths;

const { category, posts } = Astro.props;

// Sort posts by date
const sortedPosts = posts.sort((a: any, b: any) =>
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);
---

<Layout
  title={`${category} - Michigan Spots Blog`}
  description={`Explore our ${category} articles about Michigan's hidden gems, local businesses, and community stories.`}
  keywords={`Michigan ${category}, Michigan blog, ${category.toLowerCase()}`}
>
  <div class="container mx-auto px-4 py-20">
    <!-- Header -->
    <div class="mb-12">
      <a
        href="/blog"
        class="inline-flex items-center text-copper-orange hover:underline mb-4"
      >
        ‚Üê Back to All Posts
      </a>

      <h1 class="font-display text-5xl md:text-6xl font-bold text-ink-primary mb-4">
        {category}
      </h1>
      <p class="text-xl text-ink-secondary max-w-3xl">
        {sortedPosts.length} {sortedPosts.length === 1 ? 'article' : 'articles'} in this category
      </p>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map((post: any) => (
        <a href={`/blog/${post.slug}`} class="group">
          <Card className="h-full hover:border-copper-orange transition-all hover:shadow-lg">
            {post.data.featuredImage && (
              <img
                src={post.data.featuredImage}
                alt={post.data.featuredImageAlt || post.data.title}
                class="w-full h-48 object-cover rounded-t-sm mb-4 -mt-4 -mx-4"
              />
            )}

            <span class="inline-block px-3 py-1 bg-lakes-blue/10 text-lakes-blue text-sm font-medium rounded-full mb-3">
              {post.data.category}
            </span>

            <h2 class="font-heading text-2xl font-bold text-ink-primary mb-3 group-hover:text-copper-orange transition-colors">
              {post.data.title}
            </h2>

            <p class="text-ink-secondary mb-4 line-clamp-3">
              {post.data.excerpt}
            </p>

            <div class="flex items-center justify-between text-sm text-ink-faded pt-4 border-t border-ink-faded/20">
              <div class="flex items-center space-x-4">
                <span class="flex items-center">
                  <User class="w-4 h-4 mr-1" />
                  {post.data.authorName}
                </span>
                <span class="flex items-center">
                  <Calendar class="w-4 h-4 mr-1" />
                  {new Date(post.data.publishedAt).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </span>
              </div>
              <ArrowRight class="w-5 h-5 text-copper-orange group-hover:translate-x-1 transition-transform" />
            </div>
          </Card>
        </a>
      ))}
    </div>
  </div>
</Layout>
