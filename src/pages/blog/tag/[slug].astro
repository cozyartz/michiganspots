---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Layout from '../../../layouts/Layout.astro';
import { Card } from '../../../components/Card';
import { Calendar, User, ArrowRight, Tag as TagIcon } from 'lucide-react';

export const getStaticPaths = (async () => {
  const allPosts = await getCollection('blog', ({ data }) => {
    return data.status === 'published';
  });

  // Get all unique tags
  const allTags = new Set<string>();
  allPosts.forEach(post => {
    post.data.tags.forEach((tag: string) => allTags.add(tag));
  });

  return Array.from(allTags).map((tag) => {
    const tagSlug = tag.toLowerCase().replace(/\s+/g, '-');
    const filteredPosts = allPosts.filter(post => post.data.tags.includes(tag));

    return {
      params: { slug: tagSlug },
      props: { tag, posts: filteredPosts },
    };
  });
}) satisfies GetStaticPaths;

const { tag, posts } = Astro.props;

// Sort posts by date
const sortedPosts = posts.sort((a: any, b: any) =>
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);
---

<Layout
  title={`${tag} - Michigan Spots Blog`}
  description={`Articles tagged with ${tag} from Michigan Spots Blog. Discover Michigan's hidden gems and local stories.`}
  keywords={`Michigan ${tag}, ${tag.toLowerCase()}, Michigan blog`}
>
  <div class="container mx-auto px-4 py-20">
    <!-- Header -->
    <div class="mb-12">
      <a
        href="/blog"
        class="inline-flex items-center text-copper-orange hover:underline mb-4"
      >
        ‚Üê Back to All Posts
      </a>

      <div class="flex items-center gap-3 mb-4">
        <TagIcon class="w-8 h-8 text-copper-orange" />
        <h1 class="font-display text-5xl md:text-6xl font-bold text-ink-primary">
          {tag}
        </h1>
      </div>

      <p class="text-xl text-ink-secondary max-w-3xl">
        {sortedPosts.length} {sortedPosts.length === 1 ? 'article' : 'articles'} tagged with "{tag}"
      </p>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map((post: any) => (
        <a href={`/blog/${post.slug}`} class="group">
          <Card className="h-full hover:border-copper-orange transition-all hover:shadow-lg">
            {post.data.featuredImage && (
              <img
                src={post.data.featuredImage}
                alt={post.data.featuredImageAlt || post.data.title}
                class="w-full h-48 object-cover rounded-t-sm mb-4 -mt-4 -mx-4"
              />
            )}

            <span class="inline-block px-3 py-1 bg-lakes-blue/10 text-lakes-blue text-sm font-medium rounded-full mb-3">
              {post.data.category}
            </span>

            <h2 class="font-heading text-2xl font-bold text-ink-primary mb-3 group-hover:text-copper-orange transition-colors">
              {post.data.title}
            </h2>

            <p class="text-ink-secondary mb-4 line-clamp-3">
              {post.data.excerpt}
            </p>

            <div class="flex items-center justify-between text-sm text-ink-faded pt-4 border-t border-ink-faded/20">
              <div class="flex items-center space-x-4">
                <span class="flex items-center">
                  <User class="w-4 h-4 mr-1" />
                  {post.data.authorName}
                </span>
                <span class="flex items-center">
                  <Calendar class="w-4 h-4 mr-1" />
                  {new Date(post.data.publishedAt).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </span>
              </div>
              <ArrowRight class="w-5 h-5 text-copper-orange group-hover:translate-x-1 transition-transform" />
            </div>
          </Card>
        </a>
      ))}
    </div>
  </div>
</Layout>
