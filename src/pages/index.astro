---
import Layout from '../layouts/Layout.astro';
import { Hero } from '../components/Hero';
import { MichiganChallenges } from '../components/MichiganChallenges';
import { MichiganAdventure } from '../components/MichiganAdventure';
import { WhyExplore } from '../components/WhyExplore';
import { SignUpForm } from '../components/SignUpForm';
---

<Layout
  title="Michigan Spots - Free Discovery Game | Reddit Community Games 2025"
  description="Discover Michigan's hidden gems through FREE community-powered challenges, badges, and city competitions. Built on Reddit. Launches October 2025. Sign up for early access!"
  keywords="Michigan discovery game, Michigan hidden gems, Reddit games, community games 2025, Michigan tourism, free game, Battle Creek, Detroit, Ann Arbor, Michigan challenges, treasure hunt Michigan"
>
  <Hero client:load />

  <!-- Michigan Challenges Section -->
  <section class="py-20 px-4 bg-parchment-light">
    <div class="container mx-auto text-center mb-12">
      <h2 class="font-display text-4xl md:text-5xl font-bold text-ink-primary mb-4">
        Choose Your Michigan Adventure
      </h2>
      <p class="text-lg text-ink-secondary max-w-3xl mx-auto mb-8">
        10 unique challenges spanning the entire Great Lakes State. From lighthouses to college towns,
        from hidden gems to urban landmarks—every adventure tells a Michigan story.
      </p>
    </div>
    <MichiganChallenges client:visible />
  </section>

  <MichiganAdventure client:visible />
  <WhyExplore client:visible />

  <!-- How to Play on Reddit Section -->
  <section class="py-20 px-4 bg-gradient-to-b from-parchment-light to-parchment-mid">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl md:text-5xl font-bold text-ink-primary mb-6">
          Start Your Michigan Adventure
        </h2>
        <p class="text-lg md:text-xl text-ink-secondary max-w-3xl mx-auto">
          Play directly on Reddit—no app downloads needed! Join thousands of Michigan explorers discovering our state's hidden gems together.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
        <div class="space-y-6">
          <div class="parchment-card p-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-lakes-blue/20 treasure-border rounded-full flex items-center justify-center">
                <span class="font-display text-2xl font-bold text-lakes-blue">1</span>
              </div>
              <div class="flex-1">
                <h3 class="font-heading text-xl font-bold text-ink-primary mb-2">Join r/MichiganSpots</h3>
                <p class="text-ink-secondary">
                  Visit <a href="https://reddit.com/r/michiganspots" target="_blank" rel="noopener" class="text-lakes-blue hover:underline font-semibold">reddit.com/r/michiganspots</a> and become part of our Michigan explorer community. Everything happens right on Reddit!
                </p>
              </div>
            </div>
          </div>

          <div class="parchment-card p-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-amber-primary/20 treasure-border rounded-full flex items-center justify-center">
                <span class="font-display text-2xl font-bold text-amber-primary">2</span>
              </div>
              <div class="flex-1">
                <h3 class="font-heading text-xl font-bold text-ink-primary mb-2">Choose Your Adventure</h3>
                <p class="text-ink-secondary">
                  Pick from 10 unique challenges—explore lighthouses, discover hidden gems, tour college towns, or visit all five Great Lakes. Every adventure tells a Michigan story.
                </p>
              </div>
            </div>
          </div>

          <div class="parchment-card p-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-forest-green/20 treasure-border rounded-full flex items-center justify-center">
                <span class="font-display text-2xl font-bold text-forest-green">3</span>
              </div>
              <div class="flex-1">
                <h3 class="font-heading text-xl font-bold text-ink-primary mb-2">Visit & Capture</h3>
                <p class="text-ink-secondary">
                  Head out to real Michigan locations and capture your experience with photos. GPS verification keeps it fair—you have to actually be there to earn credit!
                </p>
              </div>
            </div>
          </div>

          <div class="parchment-card p-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-coral-primary/20 treasure-border rounded-full flex items-center justify-center">
                <span class="font-display text-2xl font-bold text-coral-primary">4</span>
              </div>
              <div class="flex-1">
                <h3 class="font-heading text-xl font-bold text-ink-primary mb-2">Share & Celebrate</h3>
                <p class="text-ink-secondary">
                  Share your discoveries with the community, earn badges, and celebrate Michigan's beauty together. Your photos and stories inspire fellow explorers!
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="parchment-card p-8">
          <h3 class="font-heading text-2xl font-bold text-ink-primary mb-6 text-center">Your Michigan Journey Awaits</h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-cyan-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <strong class="text-ink-primary">Discover Hidden Gems</strong>
                <p class="text-sm text-ink-secondary">Find amazing places you never knew existed—from natural wonders to historic sites</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-cyan-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <strong class="text-ink-primary">Play Fun Mini-Games</strong>
                <p class="text-sm text-ink-secondary">Michigan trivia, memory match, photo challenges, and more—all inside Reddit</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-cyan-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <strong class="text-ink-primary">Connect with Your Community</strong>
                <p class="text-sm text-ink-secondary">Share stories, exchange tips, and celebrate Michigan pride with fellow explorers</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-cyan-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <strong class="text-ink-primary">Capture Your Memories</strong>
                <p class="text-sm text-ink-secondary">Submit photos at real locations—GPS keeps it authentic and fair for everyone</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-cyan-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <strong class="text-ink-primary">Earn Badges & Recognition</strong>
                <p class="text-sm text-ink-secondary">Collect unique badges as you explore—show off your Pure Michigan achievements</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-cyan-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <strong class="text-ink-primary">Support Local Businesses</strong>
                <p class="text-sm text-ink-secondary">Many challenges feature local partners—explore and support Michigan's economy</p>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-6 border-t-2 border-ink-primary/20">
            <div class="text-center">
              <p class="text-sm text-ink-secondary mb-4">
                <strong class="text-ink-primary">Respectful exploration for everyone</strong>
              </p>
              <a
                href="/community-guidelines"
                target="_blank"
                class="inline-block px-6 py-3 bg-lakes-blue text-parchment-light font-heading font-bold treasure-border hover:bg-lakes-light transition-colors"
              >
                Community Guidelines
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="signup" class="py-20 px-4 bg-parchment-mid">
    <div class="container mx-auto max-w-4xl text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold text-ink-primary mb-6">
        Begin Your Michigan Adventure
      </h2>
      <p class="text-lg text-ink-secondary mb-8">
        Join thousands of Michigan explorers discovering the beauty of our state together.
        Michigan Spots launches October 2025—be among the first to start exploring!
      </p>
      <div class="mb-8 flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="https://www.reddit.com/r/michiganspots/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-lakes-blue text-parchment-light font-heading font-bold treasure-border hover:bg-lakes-light transition-colors text-lg"
        >
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
          </svg>
          Join the Community
        </a>
        <a
          href="/about"
          class="inline-block px-8 py-4 bg-transparent text-ink-primary font-heading font-bold treasure-border hover:bg-parchment-light transition-colors text-lg"
        >
          Explore Challenges
        </a>
      </div>
      <SignUpForm client:load />

      <div class="mt-12 parchment-card p-6">
        <p class="text-sm text-ink-secondary">
          <strong class="text-ink-primary">Built for Reddit Community Games 2025</strong><br />
          Made in Michigan, for Michiganders. Free forever. No app downloads. Pure Michigan adventure.
        </p>
      </div>
    </div>
  </section>
</Layout>
