  "license": "MIT",
  "devDependencies": {
    "@devvit/kit": "^0.10.23",
    "@devvit/protos": "^0.10.23",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@devvit/public-api": "^0.10.23"
  }
}